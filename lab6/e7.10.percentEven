public static double percentEven(int[] arr) {
    int numOfEven = 0;
    if (arr.length <= 0) {
        return 0.0;
    } else {
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] % 2 == 0) {
                numOfEven++;
            }
        }
    }
    
    return ((double) numOfEven) / arr.length * 100;
}
