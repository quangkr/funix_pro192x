public static double stdev(int[] arr) {
    int sumOfElements = 0;
    for (int i = 0; i < arr.length; i++) {
        sumOfElements += arr[i];
    }
    
    double average = (double) sumOfElements / arr.length;
    double sum = 0.0;
    for (int i = 0; i < arr.length; i++) {
        sum += Math.pow((arr[i] - average), 2);
    }
    
    return Math.sqrt(sum/(arr.length - 1));
}
