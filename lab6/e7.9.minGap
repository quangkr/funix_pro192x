public static int minGap(int[] arr) {
    int gap = 0;
    if (arr.length >= 2) {
        gap = arr[1] - arr[0];
        for (int i = 2; i < arr.length; i++) {
            gap = (arr[i] - arr[i-1] < gap) ? (arr[i] - arr[i-1]) : gap;
        }
    }
    
    return gap;
}
