public static int range(int[] arr) {
    int largest = arr[0];
    int smallest = arr[0];
    for (int i = 1; i < arr.length; i++) {
        if (arr[i] > largest) {
            largest = arr[i];
        } else if (arr[i] < smallest) {
            smallest = arr[i];
        }
    }
    return largest - smallest + 1;
}
