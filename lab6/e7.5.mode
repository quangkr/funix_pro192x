public static int mode(int[] arr) {
    int[] tallyArr = new int[101];
    for (int i = 0; i < arr.length; i++) {
        tallyArr[arr[i]]++;
    }
    
    int maxCount = 0;
    int mode = arr[0];
    for (int i = 0; i < tallyArr.length; i++) {
        if (tallyArr[i] > maxCount) {
            mode = i;
            maxCount = tallyArr[i];
        }
    }
    
    return mode;
}
